@startuml
title Trabajador solicita y recibe material desde Inventario
hide footbox
skinparam monochrome true
skinparam shadowing false

actor "Trabajador" as TRA
participant "Material_Asignado" as MA
participant "Inventario" as INV

TRA -> MA : Solicitar material(artículo,cantidad)
activate MA
MA -> INV : Verificar disponibilidad(artículo,cantidad)
activate INV

alt Disponible
  INV --> MA : Disponible
  MA -> INV : Descontar unidades(artículo,cantidad)
  INV --> MA : Stock actualizado
  MA --> TRA : Asignación registrada(artículo,cantidad,estado=entregado)
else No disponible
  INV --> MA : No disponible
  MA --> TRA : Solicitud rechazada
end

deactivate INV
deactivate MA
@enduml
